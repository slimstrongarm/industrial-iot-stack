    {
        "id": "parse_environment",
        "type": "function",
        "z": "brewery_dashboard",
        "name": "Parse Environment",
        "func": "// Extract temperature and humidity\nif (msg.payload.temperature !== null) {\n    node.send([{\n        payload: msg.payload.temperature,\n        topic: \"temperature\"\n    }, null]);\n}\n\nif (msg.payload.humidity !== null) {\n    node.send([null, {\n        payload: msg.payload.humidity,\n        topic: \"humidity\"\n    }]);\n}\n\nreturn null;",
        "outputs": 2,
        "timeout": "",
        "noerr": 0,
        "initialize": "",
        "finalize": "",
        "libs": [],
        "x": 350,
        "y": 100,
        "wires": [
            ["temp_gauge", "temp_text", "temp_chart"],
            ["humidity_gauge", "humidity_text", "humidity_chart"]
        ]
    },
