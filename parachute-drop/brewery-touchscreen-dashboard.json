    {
        "id": "store_data",
        "type": "function",
        "z": "brewery_dashboard",
        "name": "Store for Trends",
        "func": "// Store data points for trend chart\nlet data = context.get('trendData') || [];\n\n// Add new data point\ndata.push({\n    timestamp: new Date().toISOString(),\n    temperature: msg.payload.temperature,\n    humidity: msg.payload.humidity\n});\n\n// Keep only last 24 hours (1440 points at 1 minute intervals)\nconst oneDayAgo = new Date(Date.now() - 24 * 60 * 60 * 1000);\ndata = data.filter(d => new Date(d.timestamp) > oneDayAgo);\n\n// Store updated data\ncontext.set('trendData', data);\n\n// Format for chart\nlet tempData = [];\nlet humidityData = [];\n\ndata.forEach(point => {\n    const time = new Date(point.timestamp);\n    if (point.temperature !== null) {\n        tempData.push({\n            x: time,\n            y: point.temperature\n        });\n    }\n    if (point.humidity !== null) {\n        humidityData.push({\n            x: time,\n            y: point.humidity\n        });\n    }\n});\n\nmsg.payload = [\n    {\n        series: [\"Temperature °C\"],\n        data: [tempData],\n        labels: [\"Temperature\"]\n    },\n    {\n        series: [\"Humidity %RH\"],\n        data: [humidityData],\n        labels: [\"Humidity\"]\n    }\n];\n\nreturn msg;",
        "outputs": 1,
        "timeout": "",
        "noerr": 0,
        "initialize": "",
        "finalize": "",
        "libs": [],
        "x": 340,
        "y": 200,
        "wires": [["trend_chart"]]
    },
