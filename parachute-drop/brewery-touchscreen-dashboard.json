    {
        "id": "alarm_handler",
        "type": "function",
        "z": "brewery_dashboard",
        "name": "Alarm Handler",
        "func": "// Handle alarms with visual and audio alerts\nif (msg.payload.severity === 'warning') {\n    // Create notification\n    let notification = {\n        payload: `⚠️ ${msg.payload.sensor.toUpperCase()} ALARM: ${msg.payload.message}`,\n        highlight: true,\n        socketid: msg.socketid\n    };\n    \n    // Send to notification widget\n    node.send([notification, null]);\n    \n    // Also create a toast notification\n    let toast = {\n        topic: \"Sensor Alarm\",\n        payload: msg.payload.message,\n        priority: 2\n    };\n    \n    node.send([null, toast]);\n}\n\nreturn null;",
        "outputs": 2,
